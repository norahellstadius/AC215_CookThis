network_id_1=$(docker inspect -f '{{range .NetworkSettings.Networks}}{{.NetworkID}}{{end}}' api_service)

# Get the network ID for container2
network_id_2=$(docker inspect -f '{{range .NetworkSettings.Networks}}{{.NetworkID}}{{end}}' frontend-simple)

# Compare the network IDs
if [ "$network_id_1" = "$network_id_2" ]; then
    echo "Containers are connected to the same network."
else
    echo "Containers are not connected to the same network."
fi
